{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/(.*)\\.(js|css|png|jpg|svg|ico)$", "dest": "/$1.$2" },
    { "src": "/(.*)",                       "dest": "/index.html" }
  ]
}
